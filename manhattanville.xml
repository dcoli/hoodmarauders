<?xml version="1.0"?>
<GoblinXNASettings>
  <!--Specifies the file path in which to write out the log file-->
  <!--If not specified, the default path is where the executable is with file name 'log.txt'-->
  <var name="LogFileName" value="GoblinXNALog.txt" />
  <!--Specifies where the texture resources are stored under 'Content' directory-->
  <!--You don't need to specify this if directly stored under 'Content'-->
  <var name="TextureDirectory" value="Textures" />
  <!--Specifies where the shader (.fx) resources are stored under 'Content' directory-->
  <!--You don't need to specify this if directly stored under 'Content'-->
  <var name="ShaderDirectory" value="Shaders" />
  <!--Specifies where the 3D model resources are stored under 'Content' directory-->
  <!--You don't need to specify this if directly stored under 'Content'-->
  <var name="ModelDirectory" value="Models" />
  <!--Specifies where the font resources are stored under 'Content' directory-->
  <!--You don't need to specify this if directly stored under 'Content'-->
  <var name="FontDirectory" value="Fonts" />
  <!--
  ##################
  Head Room Settings
  ##################
  -->
  <!--
  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
  Camera
  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
  -->
  <var name="CameraID" value="2" />
  <!-- Settings for 640x480 -->
  <var name="CameraFx" value="638.052" />
  <var name="CameraFy" value="633.673" />
  <var name="Resolution" value="_640x480" />
  <!-- Settings for 320x240
  <var name="CameraFx" value="319.026" />
  <var name="CameraFy" value="316.837" />
  <var name="Resolution" value="_320x240" />
  -->
  <!--
  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
  Debug
  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
  -->
  <var name="ShowNotifications" value="true" />
  <var name="FadeOutTime" value="1000" />
  <!--
  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
  Markers
  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
  -->
  <var name="GroundOptimize" value="false" />
  <var name="GroundMaxDropouts" value="-1" />
  <var name="ToolOptimize" value="false" />
  <var name="ToolMaxDropouts" value="-1" />
  <var name="ToolSmoother" value="0.4" />
  <var name="ToolTagName" value="pointer3" />
  <!--
  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
  Miscellaneous
  ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
  -->
  <var name="BuildingsDetailed" value="false" />
  <var name="BuildingsSubset" value="false" /><!-- This is only in effect when BuildingsDetailed = false-->
  
</GoblinXNASettings>